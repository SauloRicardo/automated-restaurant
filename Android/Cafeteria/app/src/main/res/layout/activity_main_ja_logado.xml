<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainJaLogado">

    <Button
        android:id="@+id/btn_reserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="onClick_btn_reserva"
        android:text="Realizar Reserva" />

    <Button
        android:id="@+id/btn_usar_mesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="218dp"
        android:onClick="onClick_btn_usar_mesa"
        android:text="Utilizar Mesa" />

    <Button
        android:id="@+id/btn_ver_comandas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="78dp"
        android:onClick="onClick_btn_ver_comandas"
        android:text="Comandas Passadas" />
</android.widget.RelativeLayout>